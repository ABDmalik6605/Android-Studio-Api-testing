<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.main.AirportDetail">

    <TextView
        android:id="@+id/itemTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="@color/red"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/locationLabel"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:layout_height="wrap_content"
        android:text="Location:"
        app:layout_constraintTop_toBottomOf="@id/itemTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/itemLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/yellow"
        android:text="Location"
        app:layout_constraintTop_toBottomOf="@id/itemTitle"
        app:layout_constraintStart_toEndOf="@id/locationLabel"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/codeLabel"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Code:"
        app:layout_constraintTop_toBottomOf="@id/itemLocation"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/itemCode"
        android:layout_width="wrap_content"
        android:textColor="@color/yellow"
        android:layout_height="wrap_content"
        android:text="Code"
        app:layout_constraintTop_toBottomOf="@id/itemLocation"
        app:layout_constraintStart_toEndOf="@id/codeLabel"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/cityLabel"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="City:"
        app:layout_constraintTop_toBottomOf="@id/itemCode"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/itemCity"
        android:layout_width="wrap_content"
        android:textColor="@color/yellow"
        android:layout_height="wrap_content"
        android:text="City"
        app:layout_constraintTop_toBottomOf="@id/itemCode"
        app:layout_constraintStart_toEndOf="@id/cityLabel"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/countryLabel"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Country:"
        app:layout_constraintTop_toBottomOf="@id/itemCity"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/itemCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/yellow"
        android:text="Country"
        app:layout_constraintTop_toBottomOf="@id/itemCity"
        app:layout_constraintStart_toEndOf="@id/countryLabel"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/timezoneLabel"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Timezone:"
        app:layout_constraintTop_toBottomOf="@id/itemCountry"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/itemTimezone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/yellow"
        android:text="Timezone"
        app:layout_constraintTop_toBottomOf="@id/itemCountry"
        app:layout_constraintStart_toEndOf="@id/timezoneLabel"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/airlinesLabel"
        android:layout_width="wrap_content"
        android:textColor="@color/red"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Airlines:"
        app:layout_constraintTop_toBottomOf="@id/itemTimezone"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/itemAirlines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/yellow"
        android:text="Airlines"
        app:layout_constraintTop_toBottomOf="@id/itemTimezone"
        app:layout_constraintStart_toEndOf="@id/airlinesLabel"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/servicesLabel"
        android:layout_width="wrap_content"
        android:textColor="@color/red"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Services:"
        app:layout_constraintTop_toBottomOf="@id/itemAirlines"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/itemServices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/yellow"
        android:text="Services"
        app:layout_constraintTop_toBottomOf="@id/itemAirlines"
        app:layout_constraintStart_toEndOf="@id/servicesLabel"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/contactLabel"
        android:layout_width="wrap_content"
        android:textColor="@color/red"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="Contact Information:"
        app:layout_constraintTop_toBottomOf="@id/itemServices"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/itemPhoneLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:text="Phone:"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/contactLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/itemPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/yellow"
        android:text="Phone"
        app:layout_constraintTop_toBottomOf="@id/contactLabel"
        app:layout_constraintStart_toEndOf="@id/itemPhoneLabel"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/itemEmailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:text="Email:"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/itemPhoneLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/itemEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/yellow"
        android:text="Email"
        app:layout_constraintTop_toBottomOf="@id/itemPhoneLabel"
        app:layout_constraintStart_toEndOf="@id/itemEmailLabel"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/itemWebsiteLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:text="Website:"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/itemEmailLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/itemWebsite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/yellow"
        android:text="Website"
        app:layout_constraintTop_toBottomOf="@id/itemEmailLabel"
        app:layout_constraintStart_toEndOf="@id/itemWebsiteLabel"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>